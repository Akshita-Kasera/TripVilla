<% layout('/layouts/boilerplate') -%>

<div style="max-width: 900px; margin:auto">
   <!-- Title -->
   <h3 class="mt-3"><%= listing.title %></h3>

  

  <!-- Listing Card -->
  <div style=" border-radius: 10px; overflow: hidden; margin-bottom: 2rem;">
   <img src="<%= listing.image?.url %>" alt="listing_image" style="width: 100%; height: 350px; object-fit: cover; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">

    
    <div style="padding: 1rem;">
      <p><strong>Owned by</strong> <i><%= listing.owner.username %></i></p>
      <p><%= listing.description %></p>
      <p style="margin-bottom: 0.3rem;"><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
      <p style="margin-bottom: 0.3rem;"><strong>Location:</strong> <%= listing.location %></p>
      <p><strong>Country:</strong> <%= listing.country %></p>
    </div>
  </div>

  <!-- Edit/Delete Buttons -->
  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
   <div class="d-flex flex-wrap gap-3 mb-4">
    
      <a href="/listings/<%= listing._id %>/edit" 
         class="btn btn-dark"
         style="background-color:#fe424d; border:none; width: 90px;">
        Edit
      </a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark" style="width: 90px;">Delete</button>
      </form>
    </div>
  <% } %>

  <!-- Review Form -->
  <% if(currUser) { %>
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" class="needs-validation" novalidate style="margin-bottom: 2rem;">

      <div style="margin-top: 1rem;">
        <label class="form-label">Rating</label>
        <fieldset class="starability-grow">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div style="margin-top: 1rem;">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" rows="5" required 
                  style="width: 100%; border: 1px solid #ccc; border-radius: 5px; padding: 10px;"></textarea>
        <div class="invalid-feedback">Please submit some comments for review</div>
      </div>

      <button class="btn btn-outline-dark" style="margin-top: 1rem;">Submit</button>
    </form>
    
  <% } %>

  <!-- All Reviews -->
  <% if(listing.reviews.length > 0) { %>
    <h4>All Reviews</h4>
    <div style="display: flex; flex-wrap: wrap;">
      <% for(let review of listing.reviews) { %>
        <div style="width: 47%; margin: 1% 1.5%; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px;">
          <div style="padding: 1rem;">
            <h5>@<%= review.author.username %></h5>
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <p><%= review.comment %></p>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>

  <hr style="margin: 2rem 0;">

  <!-- Map Section -->
  <h4>Where you'll be</h4>
  <div id="map" style="height: 400px; border-radius: 10px; overflow: hidden; margin-top: 1rem;">
    <%- include("../includes/map", { listing, maptilerKey }) %>
  </div>
</div>
