<% layout('/layouts/boilerplate') -%>
  <style>
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    text-decoration: none;
    color: inherit;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid rgb(25, 25, 25);
    border-radius: 1rem;
    margin-top: 1.25rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }

  /* âœ… Mobile View Overrides Only */
  @media (max-width: 768px) {
    .filters {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: space-between;
    }

    .filter {
      flex: 1 1 30%;
      max-width: 32%;
      margin-right: 0;
    }
  }
</style>

<% layout("layouts/boilerplate") %>
<div class="container-fluid mt-3 px-2 px-md-5">
<%- include('filters') %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%=listing._id%>" class="listing-link">
  <div class="card listing-card " >
     <!-- Heart icon in corner -->
    <i class="fa-regular fa-heart wishlist-icon" onclick="toggleHeart(event,this)"></i>
  <img src="<%= listing.image?.url %>"
   class="card-img-top" 
   alt="listing_image"
   style="height: 20rem;">
   <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
      <b><%= listing.title %></b><br>
      &#8377;<%= (listing.price ?? 0).toLocaleString("en-IN") %>/night
      <i class="tax-info"> &nbsp;+18% GST</i>
      </p>
  </div>
</div>
</a>
<% } %>
</div>
</div>
<script src="/js/filters.js"></script>

<script>
  function toggleHeart(event, icon) {
    event.stopPropagation(); // Prevent event bubbling to <a>
    event.preventDefault();  // Prevent default anchor behavior
    icon.classList.toggle('liked');
    icon.classList.toggle('fa-regular');
    icon.classList.toggle('fa-solid');
  }
</script>


   
    
    




