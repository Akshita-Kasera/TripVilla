<% layout("layouts/boilerplate") %>
<div class="container-fluid mt-4 px-2 px-md-5">
  <h3 class="mb-4">Search Results for "<%= query %>"</h3>

  <% if (results.length === 0) { %>
    <p>No listings found.</p>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for (let listing of results) { %>
        <div class="col mb-4">
          <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
            <div class="card listing-card position-relative">
              <!-- Heart icon in corner -->
              <i class="fa-regular fa-heart wishlist-icon" onclick="toggleHeart(this)"></i>
              <img src="<%= listing.image?.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-body">
                <p class="card-text">
                  <b><%= listing.title %></b><br>
                  â‚¹<%= (listing.price ?? 0).toLocaleString("en-IN") %>/night
                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<script>
  function toggleHeart(icon) {
    icon.classList.toggle('liked');
    icon.classList.toggle('fa-regular');
    icon.classList.toggle('fa-solid');
  }
</script>
